{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@microservices/logger": ["lib/logger/src/index.ts"],
      "@microservices/error-handler": ["lib/error-handler/src/index.ts"],
      "@microservices/types": ["lib/types/src/index.ts"],
      "@microservices/kafka": ["lib/kafka/src/index.ts"],
      "@microservices/redis": ["lib/redis/src/index.ts"],
      "@microservices/auth-db": ["lib/auth-db/src/index.ts"],
      "@microservices/env-config": ["lib/env-config/src/index.ts"],
      "@microservices/prisma": ["lib/prisma/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../lib/env-config/tsconfig.lib.json"
    },
    {
      "path": "../../lib/auth-db/tsconfig.lib.json"
    },
    {
      "path": "../../lib/error-handler/tsconfig.lib.json"
    },
    {
      "path": "../../lib/logger/tsconfig.lib.json"
    }
  ]
}
